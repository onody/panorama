%h1 Listing trades

%table
  %thead
    %tr
      %th Vendor
      %th Vendor trade
      %th Price
      %th Amount
      %th Executed at
      %th
      %th
      %th

  %tbody
    - @trades.each do |trade|
      %tr
        %td= trade.vendor_id
        %td= trade.vendor_trade_id
        %td= trade.price
        %td= trade.amount
        %td= trade.executed_at
        %td= link_to 'Show', trade
        %td= link_to 'Edit', edit_trade_path(trade)
        %td= link_to 'Destroy', trade, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Trade', new_trade_path
